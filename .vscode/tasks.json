{
    "type": "cppbuild",
    "label": "clang++-18 build",
    "command": "/usr/bin/clang++-18",
    "args": [
        "-std=c++23",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
    ],
    "options": {
        "cwd": "${fileDirname}"
    },
    "problemMatcher": ["$gcc"],
    "group": {
        "kind": "build",
        "isDefault": true
    }
}
